AC_SUBST([LIBAO_LIBS])

dnl check for oss
AC_ARG_ENABLE([oss],
    [  --disable-oss           make a version not using oss])
if test x"$enable_oss" != x"no"; then
    case "$host" in
    *-linux*|*-openbsd*|*-freebsd*)
	AC_DEFINE([LIBAO_OSS],,[libao OSS support])
	AC_CHECK_LIB([ossaudio],[_oss_ioctl],
	    [LIBAO_LIBS="$LIBAO_LIBS -lossaudio"])
    esac
fi
